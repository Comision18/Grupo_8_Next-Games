<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>

  <%- include('../partials/header.ejs') %>



    <main>
      <div class="split-screen">

        <div class="left-register">
          <div class="titles">
            <h1>Start your gaming journey with us</h1>
            <h2 class="titulo-register1">Lorem ipsum dolor sit amet, consectetur adipiscing elit,</h2>

          </div>
        </div>


        <div class=" right-register">
          <form method="POST" action="" enctype="multipart/form-data">
            <section class="titles-register">
              <div class="titles-left">
                <h2 class="titulo-register1">CREA TU CUENTA</h2>
                <h3 class="titulo-register2">Ya tenes una cuenta? ingresa <a class="aca" href="/users/login">aca</a>
                </h3>
              </div>
              <div class="login-register">
                <button class="google">
                  <img src="/images/google-icon.png" alt="logo-google" class="log">
                  Sign up with Google
                </button>

            </section>
            <div class="divider">
              <span class="orSpan">
                or</span>
              <hr class="hr-register">

            </div>

            <div class="card">
              <div class="forms">
                <div class="name">
                  <input type="file" name="image" style="color: white; font-size: 10px; padding: 10px;">
                  <label for="">Avatar</label>

                  <input type="text" name="firstName" value="" class="<%= (locals.errors && errors.firstName) && 'is-invalid'%>" value="<%= (locals.old && old.firstName) && old.firstName %>" style="color: white;">
                  <label for="">Nombre</label>
                  <small style="color: tomato; font-size: 10px; "><%= locals.errors && errors.firstName ? errors.firstName.msg : null %></small>

                  <input type="text" name="lastName" value="<%= (locals.old && old.lastName) && old.lastName%>" class="form-control  <%= (locals.errors && errors.lastName) && 'is-invalid'%>" style="color: white;">
                  <label for="">Apellido</label>
                  <small style="color: tomato; font-size: 10px; "><%= locals.errors && errors.lastName ? errors.lastName.msg : null %></small>

                  <input type="text" name="userName" style="color: white;">
                  <label for="">Usuario</label>
                  <small style="color: tomato; font-size: 10px; "><%= locals.errors && errors.userName ? errors.userName.msg : null %></small>

                  <input type="email" name="email" <%= (locals.errors && errors.email) && 'is-invalid'%>, style="color: white;">
                  <label for="">E-mail</label>
                  <small style="color: tomato; font-size: 10px; "><%= locals.errors && errors.email ? errors.email.msg : null %></small>

                  <input type="password" name="password" <%= (locals.errors && errors.password) && 'is-invalid'%> style="color: white;">
                  <label for="">Contrase√±a</label>
                  <small style="color: tomato; font-size: 10px; "><%= locals.errors && errors.password ? errors.password.msg : null %></small>

                  <input type="password" name="password2" <%= (locals.errors && errors.password2) && 'is-invalid'%>  style="color: white;">
                  <label for="" >Confirmar</label>
                  <small style="color: tomato; font-size: 10px; "><%= locals.errors && errors.password2 ? errors.password2.msg : null %></small>

                </div>
                <button type="submit" class="guardar">registrar</button>

              </div>
            </div>
          </form>
        </div>

      </div>

    </main>

     <!--whatsapp-->
     <%- include('../partials/whatsApp.ejs') %>
    <!-- footer -->
    <%- include('../partials/footer.ejs') %>

</body>

</html>